                              Width="220">
                            <StackPanel>
                                <Grid Margin="0 5 0 0" Width="170">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto"></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Label VerticalAlignment="Center" Foreground="White" Content="Sản phẩm: " FontSize="15"></Label>
