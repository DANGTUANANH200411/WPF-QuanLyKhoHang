                                    </ComboBox>
                                </Grid>
                                <Grid Margin="10 4 10 0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="70"></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Label VerticalAlignment="Center" Foreground="White" Content="Kho hàng: " FontSize="14"></Label>
                                    <ComboBox Grid.Column="1" VerticalAlignment="Center" FontSize="14"
                                ItemsSource="{Binding StorageList3}" DisplayMemberPath="NameStorage" SelectedValuePath="IdStorage" SelectedValue="{Binding Storage3}" Text="{Binding TextStorage3}">
                                    </ComboBox>
                                </Grid>
                                <Grid Margin="10 4 10 0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="70"></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Label VerticalAlignment="Center" Foreground="White" Content="Phụ trách: " FontSize="14"></Label>
                                    <ComboBox Grid.Column="1" VerticalAlignment="Center" FontSize="14"
                                ItemsSource="{Binding EmployeeList3}" DisplayMemberPath="NameEmployee" SelectedValuePath="IdEmployee" SelectedValue="{Binding Employee3}" Text="{Binding TextEmployee3}">
                                    </ComboBox>
                                </Grid>
                                <Grid Margin="10 4 10 0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto"></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                        <ColumnDefinition Width="auto"></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Label Foreground="White" Content="Lô: " FontSize="14"></Label>
                                    <ComboBox Grid.Column="1" VerticalAlignment="Center" FontSize="14"
                                ItemsSource="{Binding ConsignmentList3}" DisplayMemberPath="IdConsignment" SelectedValuePath="IdConsignment" SelectedValue="{Binding Consignment3}" Text="{Binding TextConsignment3}">
                                    </ComboBox>
                                    <Label Grid.Column="2" VerticalAlignment="Center" Foreground="White" Content="SL: " FontSize="14"></Label>
                                    <TextBox Grid.Column="3" VerticalAlignment="Center" FontSize="14"
                                Text="{Binding TextUnit3 , UpdateSourceTrigger=PropertyChanged}"
                                    PreviewTextInput="NumberValidationTextBox">
                                    </TextBox>
                                </Grid>
                                <Grid Margin="10 4 10 0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto"></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                        <ColumnDefinition Width="auto"></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Label VerticalAlignment="Bottom" Foreground="White" Content="NSX: " FontSize="14"></Label>
                                    <TextBlock Grid.Column="1" FontSize="11" VerticalAlignment="Center"
                                              Text="{Binding MafDate3, StringFormat='dd/MM/yyyy'}" >
                                    </TextBlock>
                                    <Label Grid.Column="2" VerticalAlignment="Bottom" Foreground="White" Content="HSD: " FontSize="14"></Label>
                                    <TextBlock Grid.Column="4" FontSize="11" VerticalAlignment="Center"
                                              Text="{Binding ExpDate3, StringFormat='dd/MM/yyyy'}" >
                                    </TextBlock>
                                </Grid>
                                <Button
                                    Command="{Binding EditCommand3}"
                                            Style="{StaticResource MaterialDesignToolForegroundButton}"
                                            HorizontalAlignment="Center">
                                    <materialDesign:PackIcon
                                              Kind="Wrench"
                                            Foreground="Green"/>
                                </Button>
                            </StackPanel>
                        </materialDesign:Card>
                    </Grid>
                    <StackPanel Grid.Row="2"
                              Orientation="Horizontal"
                              Margin="16 0 0 0"
                              HorizontalAlignment="Right">
                        <Button
                            Command="{Binding DeleteCommand}"
                            HorizontalAlignment="Right"
                            Style="{StaticResource MaterialDesignToolForegroundButton}"
                            Width="30"
                            Padding="2 0 2 0"
                            materialDesign:RippleAssist.IsCentered="True">
                            <materialDesign:PackIcon Kind="Trash" Foreground="Red"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </materialDesign:Card>
            <materialDesign:Card Grid.Row="1" Margin="5 15 5 0" VerticalAlignment="Stretch">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid>
                        <TextBox
                        Text="{Binding Path= Filter, UpdateSourceTrigger=PropertyChanged}"
                        HorizontalAlignment="Left"
                        Width="200"
                        Margin="10 5 0 0"
                      materialDesign:HintAssist.Hint="Tìm kiếm"
                      Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
                    </Grid>
                    <Grid Grid.Row="1">
                        <Separator 
                         Margin="5" 
                         Style="{StaticResource MaterialDesignDarkSeparator}" >
                        </Separator>
                    </Grid>
                    <ListView Grid.Row="2" ItemsSource="{Binding ListOutputInfo}" SelectedItem="{Binding SelectedItem, Mode=TwoWay}">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Mã phiếu xuất" DisplayMemberBinding="{Binding Output.IdOutput}"></GridViewColumn>
                                <GridViewColumn Header="Ngày xuất kho" DisplayMemberBinding="{Binding Output.DateOutput, StringFormat='dd/MM/yyyy'}"></GridViewColumn>
                                <GridViewColumn Header="Khách hàng" DisplayMemberBinding="{Binding NameCustomer}"></GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </materialDesign:Card>
        </Grid>

        <Grid Grid.Column="1">
            <Grid x:Name="GridBackground" Background="#55313131" Opacity="0"/>
            <Grid  HorizontalAlignment="Right" VerticalAlignment="Top">
                <Button x:Name="ButtonOpen" Background="IndianRed"  BorderBrush="{x:Null}" Width="50" Height="50" Padding="0" Content="Xuất" FontSize="20">
                </Button>
            </Grid>
            <Grid x:Name="GridMenu" Width="300" HorizontalAlignment="Right" Margin="0 0 -300 0" Background="White" RenderTransformOrigin="0.5,0.5">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="39*"/>
                </Grid.RowDefinitions>
                <Grid.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Grid.RenderTransform>
                <Grid Grid.RowSpan="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid Margin="0 5 0 10">
                        <ComboBox ItemsSource="{Binding ListCustomer}" DisplayMemberPath="NameCustomer" SelectedValuePath="IdCustomer" SelectedValue="{Binding NewCustomer}" Text="{Binding TestCustomer}"
                          Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                          materialDesign:TextFieldAssist.HasClearButton="True"
                          materialDesign:TextFieldAssist.UnderlineBrush="{DynamicResource SecondaryHueMidBrush}"
                          materialDesign:HintAssist.Hint="Khách hàng"
                          Width="200">
                        </ComboBox>
                    </Grid>
                    <materialDesign:Card Grid.Row="1"
                              Background="IndianRed"
                              Foreground="{DynamicResource PrimaryHueDarkForegroundBrush}"
                             Margin="5 0 5 5">
                        <StackPanel>
                            <TextBlock VerticalAlignment="Center" FontSize="15" Margin="16 0 16 0"
                                Text="Sản phẩm 1">
                            </TextBlock>
                            <Grid Margin="16 0 16 2" VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <DockPanel>
                                    <Label Content="Tên SP:" Foreground="White" VerticalAlignment="Bottom"></Label>
                                    <ComboBox ItemsSource="{Binding ListProduct}" DisplayMemberPath="NameProduct" SelectedValuePath="IdProduct" SelectedValue="{Binding NewProduct1}"
                                    Height="35"
                                      Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                          materialDesign:TextFieldAssist.HasClearButton="True"
                          materialDesign:TextFieldAssist.UnderlineBrush="{DynamicResource SecondaryHueMidBrush}"
                                             FontSize="13">
                                    </ComboBox>
                                </DockPanel>
                                <DockPanel  Grid.Column="1">
                                    <Label Content="Kho: " Foreground="White" VerticalAlignment="Bottom"></Label>
                                    <ComboBox ItemsSource="{Binding ListStorage1}" DisplayMemberPath="NameStorage" SelectedValuePath="IdStorage" SelectedValue="{Binding NewStorage1}" Text="{Binding TestStorage1}"
                                    Height="35"
                                      Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                          materialDesign:TextFieldAssist.HasClearButton="True"
                          materialDesign:TextFieldAssist.UnderlineBrush="{DynamicResource SecondaryHueMidBrush}">
                                    </ComboBox>
                                </DockPanel>
                            </Grid>
                            <Grid Margin="16 0 16 2" VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <DockPanel>
                                    <Label Content="Mã lô:" Foreground="White" VerticalAlignment="Bottom"></Label>
                                    <ComboBox ItemsSource="{Binding ListConsignment1}" DisplayMemberPath="IdConsignment" SelectedValuePath="IdConsignment" SelectedValue="{Binding NewConsignment1}" Text="{Binding TestConsignment1}"
                                    Height="35"
                                      Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                          materialDesign:TextFieldAssist.HasClearButton="True"
                          materialDesign:TextFieldAssist.UnderlineBrush="{DynamicResource SecondaryHueMidBrush}">
                                    </ComboBox>
                                </DockPanel>
                                <ComboBox  ItemsSource="{Binding ListEmployee1}" DisplayMemberPath="NameEmployee" SelectedValuePath="IdEmployee" SelectedValue="{Binding NewEmployee1}" Text="{Binding TestEmployee1}"
                                    Height="35" Margin="5 0 5 0" Grid.Column="1"
                                      materialDesign:HintAssist.Hint="NV phụ trách"
                                      Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                          materialDesign:TextFieldAssist.HasClearButton="True"
                          materialDesign:TextFieldAssist.UnderlineBrush="{DynamicResource SecondaryHueMidBrush}">
                                </ComboBox>
                            </Grid>
                            <Grid Margin="16 0 16 2" VerticalAlignment="Center" Height="30">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <DockPanel>
                                    <Label Content="NSX:" Foreground="White"  VerticalAlignment="Center"></Label>
                                    <TextBlock Text="{Binding NewMafDate1, StringFormat='dd/MM/yyyy', UpdateSourceTrigger=PropertyChanged}" Margin="5 0 5 0" VerticalAlignment="Center"/>
                                </DockPanel>
                                <DockPanel Grid.Column="1">
                                    <Label Content="HSD:" Foreground="White"  VerticalAlignment="Center"></Label>
                                    <TextBlock Text="{Binding NewExpDate1, StringFormat='dd/MM/yyyy', UpdateSourceTrigger=PropertyChanged}" Margin="5 0 5 0"  VerticalAlignment="Center"/>
                                </DockPanel>
                            </Grid>
                            <Grid Margin="16 0 16 2" VerticalAlignment="Center" Height="30">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <DockPanel>
                                    <Label Content="SL tồn:" Foreground="White"  VerticalAlignment="Center"></Label>
                                    <TextBlock Text="{Binding UnitConsignment1 , UpdateSourceTrigger=PropertyChanged}"
                                    PreviewTextInput="NumberValidationTextBox"
                                                VerticalAlignment="Center"/>
                                </DockPanel>
                                <DockPanel Grid.Column="1">
                                    <Label Content="SL xuất:" Foreground="White" VerticalAlignment="Center"></Label>
                                    <TextBox Text="{Binding TestUnit1 , UpdateSourceTrigger=PropertyChanged}"
                                    PreviewTextInput="NumberValidationTextBox"
                                    materialDesign:TextFieldAssist.HasClearButton="True"
                          materialDesign:TextFieldAssist.UnderlineBrush="{DynamicResource SecondaryHueMidBrush}"
                                             Height="25"/>
                                </DockPanel>
                            </Grid>
                        </StackPanel>
                    </materialDesign:Card>
                    <materialDesign:Card Grid.Row="2"
                              Background="IndianRed"
                              Foreground="{DynamicResource PrimaryHueDarkForegroundBrush}"
                             Margin="5 5 5 5">
                        <StackPanel>
                            <TextBlock VerticalAlignment="Center" FontSize="15" Margin="16 0 16 0"
                                Text="Sản phẩm 2">
                            </TextBlock>
                            <Grid Margin="16 0 16 2" VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <DockPanel>
                                    <Label Content="Tên SP:" Foreground="White" VerticalAlignment="Bottom"></Label>
                                    <ComboBox ItemsSource="{Binding ListProduct}" DisplayMemberPath="NameProduct" SelectedValuePath="IdProduct" SelectedValue="{Binding NewProduct2}"
                                    Height="35"
                                      Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                          materialDesign:TextFieldAssist.HasClearButton="True"
