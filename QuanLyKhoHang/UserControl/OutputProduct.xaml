                                </Grid>
                                <Grid Margin="10 4 10 0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="70"></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Label VerticalAlignment="Center" Foreground="White" Content="Kho hàng: " FontSize="14"></Label>
                                    <ComboBox Grid.Column="1" VerticalAlignment="Center" FontSize="14"
                                ItemsSource="{Binding StorageList2}" DisplayMemberPath="NameStorage" SelectedValuePath="IdStorage" SelectedValue="{Binding Storage2}" Text="{Binding TextStorage2}" >
                                    </ComboBox>
                                </Grid>
                                <Grid Margin="10 4 10 0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="70"></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Label VerticalAlignment="Center" Foreground="White" Content="Phụ trách: " FontSize="14"></Label>
                                    <ComboBox Grid.Column="1" VerticalAlignment="Center" FontSize="14"
                                ItemsSource="{Binding EmployeeList2}" DisplayMemberPath="NameEmployee" SelectedValuePath="IdEmployee" SelectedValue="{Binding Employee2}" Text="{Binding TextEmployee2}">
                                    </ComboBox>
                                </Grid>
                                <Grid Margin="10 4 10 0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto"></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                        <ColumnDefinition Width="auto"></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Label Foreground="White" Content="Lô: " FontSize="14"></Label>
